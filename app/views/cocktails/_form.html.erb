<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Your Picture</h4>
      </div>
      <div class="modal-body" data-cocktailId="<%= @cocktail.id %>">
        <%= simple_form_for @cocktail, html: {class: "dropzone", id: "dropzone-img"}, method: :patch do |f| %>
          <%= f.input :photo, input_html: { style: "display: none;" } %>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= link_to 'Done', cocktail_path(@cocktail), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://d2v9y0dukr6mq2.cloudfront.net/video/thumbnail/zblwSNT/fresh-made-rotating-cocktail-cuba-libre-as-4k-uhd-footage-not-loopable_eoac0zroe__F0000.png');">
  <div class="banner-content">
    <%= simple_form_for(@cocktail) do |f| %>
      <br>
      <h2>Edit the cocktail:</h2>
      <%= f.input :name %>
      <br>
      <%= f.input :description %>
      <br>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    <div class="btn btn-danger">
      <button class="btn">
        <%= link_to 'Delete this s***', cocktail_path(@cocktail), method: :delete %>
      </button>
    </div>
  </div>
</div>
