<div class="banner mb-4" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://blog.worldimportados.com.br/wp-content/uploads/2019/03/bebidas-azuis-capa-1920x600.jpg');">
  <div class="banner-content">
    <h1>Welcome to the bar.</h1>
    <div class="btn btn-primary">
    <%= link_to 'Create your drink', new_cocktail_path, :class => "btn" %>
  </div>
  </div>
</div>

<section class="cards">
<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail) do%>
    <article class="card">
      <picture class="thumbnail">
           <img class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))," src="<%= cocktail.photo %>" alt="" />
      </picture>
      <div class="card-content">
        <h2><%= cocktail.name %></h2>
        <p><%= cocktail.description %></p>
     </div>
    </article>
  <% end %>
<% end %>
</section>

